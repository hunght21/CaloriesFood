<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cal_food">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cal_food">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUp"></activity>
        <activity android:name=".SignUpGoal"></activity>
        <activity
            android:name=".FragmentActivity"
            android:label="@string/title_activity_fragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <activity
            android:name="com.example.cal_food.alcohol.Alcohol_Chart"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.cal_food.alcohol.Alcohol_Calculator"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".blood_pressure.BloodPressure_Calculator"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".blood_pressure.Bloodpressure_Chart">
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
        </activity>

        <activity
            android:name=".blood_pressure.BloodPressure_Result">
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.cal_food.general.Home_page"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.cal_food.alcohol.Alcohol_Result"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>
    </application>

</manifest>